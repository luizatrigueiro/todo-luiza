<div class="container">
  <h2><%= @list.title %></h2>

  <%= link_to "Add Task", new_list_task_path(@list), class: "btn btn-sm btn-success my-3" %>

  <% if @list.tasks.any? %>
    <ul class="list-group">
      <% @list.tasks.each do |task| %>
        <li class="list-group-item d-flex justify-content-between align-items-center">
          <div>
            <strong><%= task.description %></strong>
            <% if task.done %>
              <span class="badge bg-success ms-2">Done</span>
            <% end %>
          </div>
          <div class="d-flex gap-2">
            <%= link_to "Edit", edit_list_task_path(@list, task), class: "btn btn-sm btn-outline-secondary" %>
            <%= form_with url: list_task_path(@list, task), method: :delete, local: true do %>
              <%= submit_tag "Delete", class: "btn btn-sm btn-outline-danger", data: { confirm: "Are you sure?" } %>
            <% end %>
          </div>
        </li>
      <% end %>
    </ul>
  <% else %>
    <p class="text-muted">No tasks yet.</p>
  <% end %>
</div>
