<h1>Your Lists</h1>

<%= link_to 'New list', new_list_path, class: "btn btn-primary" %>

<ul>
  <% @lists.each do |list| %>
    <li>
      <%= link_to list.title, list_path(list) %> |
      <%= link_to 'Edit', edit_list_path(list) %> |
      <%= form_with url: list_path(list), method: :delete, class: "inline-form", local: true do %>
        <%= submit_tag "Delete", data: { confirm: "Are you sure?" } %>
      <% end %>
    </li>
  <% end %>
</ul>

