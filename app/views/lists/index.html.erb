<div class="container">
  <h1 class="mb-4">My Lists</h1>

  <% @lists.each do |list| %>
    <div class="card mb-3">
      <div class="card-body d-flex justify-content-between align-items-center">
        <div>
          <h5 class="card-title"><%= link_to list.title, list_path(list), class: "text-decoration-none" %></h5>
        </div>
        <div class="d-flex gap-2">
          <%= link_to "Edit", edit_list_path(list), class: "btn btn-sm btn-outline-primary" %>

          <%= form_with url: list_path(list), method: :delete, local: true do %>
            <%= submit_tag "Delete", class: "btn btn-sm btn-outline-danger" %>
          <% end %>
        </div>
      </div>
    </div>
  <% end %>
</div>
